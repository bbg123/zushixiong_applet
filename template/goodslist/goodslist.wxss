.test:nth-child(even) {
  margin-left: 0;
  margin-right: 10rpx;
}

.test {
  position: relative;
  width: 47%;
  height: 520rpx;
  margin: 10rpx 15rpx;
  display: inline-block;
  flex-wrap: wrap;
  background: #fff;
}

.hot {
  position: absolute;
  width: 50rpx;
  top: 20rpx;
  left: 10rpx;
  z-index: 10;
}

.money_big {
  padding: 15rpx 20rpx;
  display: flex;
  align-items: flex-end;
}

.img {
  vertical-align: middle;
}

.img_s {
  width: 100%;
  margin: 0 auto;
  position: relative;
}

.xin {
  position: absolute;
  width: 40rpx;
  top: 30rpx;
  right: 30rpx;
  z-index: 9;
}

.inventory {
  position: absolute;
  bottom:0;
  left: 50%;
  transform: translateX(-50%);
  font-size: 12px;
  color: #fff;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 30rpx;
  padding: 5rpx 20rpx;
}

.money_s {
  color: red;
  font-size: 16px;
}

.small_txt {
  margin-left: 5rpx;
  padding: 0 5rpx;
  text-align: center;
  font-size: 12px;
  color: #aaa;
}

.small {
  position: relative;
  padding: 0rpx 20rpx;
  font-size: 12px;
}