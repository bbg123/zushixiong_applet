/**app.wxss**/

page {
  background: #f8f8f8;
  height: 100%;
}

.container {
  height: 100%;
  display: block;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: helvetica !important;
}

.clearfix:after {
  clear: both;
  content: '';
  display: block;
  width: 0;
  height: 0;
  visibility: hidden;
}

.float_l {
  float: left;
}

.float_r {
  float: right;
}

.img {
  width: 100%;
}

.tiao {
  height: 20rpx;
  background: #f8f8f8;
}

.text_hidden {
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.text_hidden2 {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}

.text_hidden3 {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}

.red_col {
  color: #f33e35 !important;
}

.nodata {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: #ccc;
}

.mask_layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0,.5);
  z-index: 90;
}

/* 我的和首页广告超级代表提示样式 */
.vip_tips {
  position: absolute;
  width: 85%;
  top: 50%;
  left: 200%;
  transform: translate(-50%,-50%);
  border-radius: 5px;
  z-index: 91;
  transition: .8s all;
}

.vip_tips_close {
  width: 20px;
  height: 20px;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.vip_tips_show {
  left: 50%;
}

.vip_tips_btn {
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 222rpx;
  height: 80rpx;
  opacity: 0;
}