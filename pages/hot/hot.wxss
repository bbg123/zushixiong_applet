.container {
  background: #f8f8f8;
}

.small {
  width: 100%;
  margin-bottom: 20rpx;
  background: #fff;
  padding: 20rpx;
  position: relative;
}

.left {
  width: 30%;
  margin-right: 20rpx;
  box-shadow: -1px 1px 20px #ddd;
}

.right {
  width: 66%;
}

.brand {
  font-size: 20px;
  margin-bottom: 10rpx;
}

.name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  color: #000;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.tip {
  color: #aaa;
  font-size: 12px;
  margin-bottom: 10rpx;
}

.shop {
  font-size: 14px;
}

.rent {
  font-size: 14px;
}

.rent span {
  color: #ff3b2d;
}

.big_scroll {
  position: relative;
  height: 100%;
}

.big {
  display: flex;
  flex-wrap:wrap;
}

.choss {
  position: absolute;
  padding: 20rpx 30rpx;
  left: 0;
  z-index: 99;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 20rpx ;
}

.zi {
  float: left;
  text-align: center;
  font-size: 30rpx;
  padding: 5rpx 15rpx
}

.loading {
  padding: 10rpx;
  text-align: center;
  z-index: 999;
}

.loading:before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
  animation: rotate 1s linear infinite;
}

.loading.complete:before {
  display: none;
}

.want {
  position: absolute;
  font-size: 14px;
  color: #fff;
  background: #ff3b2d;
  border-radius: 10px;
  padding: 10rpx 30rpx;
  bottom: 20rpx;
  right: 20rpx;
}

.active {
  color: #ff815e;
  border-bottom: 2px solid #ff825c;
}
.yuanquan{
  color: #fff;
  background: #e6c093;
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 50%;
  top: 0;
  font-size: 16px;
}
.small:nth-child(1) .yuanquan{
  background: #ff825c !important;
}
.small:nth-child(2) .yuanquan{
  background: #ffac5c !important;
}
.small:nth-child(3) .yuanquan{
  background: #d5a737 !important;
}