.big {
  height: 550rpx;
}

.top {
  margin: 0 30rpx;
}

.sec_big{
  padding: 18rpx 0;
  border-bottom: 1px solid #e4e4e4;
}

.head {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.left span{
  line-height: 84rpx;
  font-size: 16px;
  margin-left: 10rpx;
}
.like{
  width: 36rpx;
  line-height: 84rpx;
}
.num{
  line-height: 84rpx;
  margin-left: 10rpx;
  color: #949494;
  font-size: 14px;
}
.title{
  text-indent: 2rem;
  margin-top: 16rpx;
}
.time{
  font-size: 14px;
  color: #b9b9b9;
  margin-top: 70rpx;
  margin-bottom: 32rpx;
}
.fax{
  line-height: 86rpx;
  font-size: 16px;
  margin: 0 20rpx;
  border-bottom: 1px solid #e4e4e4;
}
.masonry {
  background: #f8f8f8;
  padding: 20rpx 20rpx 20rpx 0;
  margin-left: 0;
  margin-top:0;
  display: flex;
  width: 100%;
  flex-wrap:wrap;
  box-sizing: border-box;
}

.item {
  break-inside: avoid;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 2px 2px 0px #f2f2f2;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  width: 47%;
}
.imgs {
  width: 100%;
}
.titles{
  font-size: 16px;
  padding: 0 22rpx;
  margin: 26rpx 0 20rpx;
}
.bottom{
  padding: 0 20rpx;
  padding-bottom: 28rpx;
}
.small_head{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  overflow: hidden;
}
.name{
  line-height: 40rpx;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  margin-left: 50rpx;
}
.likesz{
  width: 22rpx;
}
.nums{
  color: #7a7a7a;
  font-size: 12px;
  margin-left: 5rpx;
}