/*头部图片  */
@import"../../template/orderlist/orderlist.wxss";
.container {
  background: #f8f8f8;
}

.top_img {
  width: 100%;
  position: relative;
}

.shou {
  margin-bottom: 20rpx;
}
.bottommain {
  display: flex;
  align-items: center;
}
.people {
  width: 150rpx;
}

.title {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  font-size: 16px;
}

/*收货地址  */

.ress {
  padding: 40rpx;
  font-size: 16px;
  background: #fff;
}

/*手表  */

.watch {
  margin-top: 20rpx;
}

.small {
  padding: 30rpx;
  background: #fff;
}

.left {
  width: 30%;
  float: left;
  border: 1px solid #e5e5e5;
}

.right {
  width: 65%;
  margin-left: 20rpx;
}

.brand {
  color: #989898;
  font-size: 16px;
  margin-bottom: 14rpx;
}

.name {
  color: #989898;
  margin-bottom: 17rpx;
  font-size: 14px;
}

.color {
  color: #ccc;
  font-size: 14px;
  margin-bottom: 12rpx;
}

.money {
  line-height: 40rpx;
  font-size: 16px;
}

.num {
  line-height: 40rpx;
}

.none {
  display: none;
}

.block {
  display: block;
}

.zu_pay {
  font-size: 15px;
  color: #f33e35;
}

.ya_pay {
  color: #676767;
  font-size: 15px;
}

.nums {
  float: right;
  color: #676767;
}

/*金额结算  */

.over_money {
  background: #fff;
  padding: 0 40rpx;
}

.zus {
  font-size: 16px;
  margin-bottom: 14rpx;
  color: #8a8a8a;
}

.all {
  border-bottom: 1px dashed #9b9b9b;
  border-top: 1px dashed #9b9b9b;
  padding: 40rpx 0;
  background: #fff;
  font-size: 16px;
}

.all span {
  float: right;
}

.mai {
  width: 50%;
  border-right: 1px solid #ccc;
  margin: 10rpx 0;
}

.left_img {
  width: 17%;
  float: left;
  margin-right: -40rpx;
  vertical-align: middle;
  line-height: 100rpx;
}

.img {
  vertical-align: middle;
}

.mai button {
  background: #fff;
  font-size: 14px;
  padding: 0;
  position: static;
  line-height: 100rpx;
}

.mai button::after {
  border: none;
}

.time {
  margin-top: 20rpx;
  background: #fff;
  font-size: 16px;
  padding: 20rpx 26rpx;
}

.bottomc {
  background: #fff;
  margin-top: 20rpx;
  height: 100rpx;
}

.bottoms {
  width: 80%;
  line-height: 100rpx;
}

.que {
  margin-left: 7%;
  line-height: 1.3rem;
  border: 1px solid #f13e37;
  color: #f13e37;
  border-radius: 12px;
  margin-top: 28rpx;
  font-size: 14px;
  padding: 5rpx 10rpx;
  margin-right: 10rpx;
}

.see {
  line-height: 1.3rem;
  border: 1px solid #666;
  color: #666;
  border-radius: 12px;
  margin-top: 28rpx;
  font-size: 14px;
  padding: 5rpx 10rpx;
}
button::after{
  width: 0 !important ;
  height: 0 !important ;
}